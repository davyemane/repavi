# === ENVIRONNEMENT ===
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=your-secret-key-here

# === DOMAINES AUTORISÉS ===
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com,www.yourdomain.com

# === BASE DE DONNÉES ===
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# === EMAIL CONFIGURATION ===
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=RepAvi Lodges <noreply@yourdomain.com>
ADMIN_EMAIL=admin@yourdomain.com

# === SITE URL ===
SITE_URL_DEV=http://127.0.0.1:8000
SITE_URL_PROD=https://yourdomain.com

# === SÉCURITÉ ===
SECURE_SSL_REDIRECT=False
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# === SESSION ===
SESSION_COOKIE_AGE=1209600
SESSION_EXPIRE_AT_BROWSER_CLOSE=False
SESSION_SAVE_EVERY_REQUEST=True

# === CACHE (Production avec Redis) ===
REDIS_URL=redis://127.0.0.1:6379/1

# === LOCALISATION ===
TIME_ZONE=Africa/Douala

# === REPAVI LODGES - PARAMÈTRES MÉTIER ===
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=+237 XXX XXX XXX
COMPANY_EMAIL=contact@yourdomain.com

# WhatsApp pour réservations directes
WHATSAPP_NUMBER=+237XXXXXXXXX

# === NOTIFICATIONS WHATSAPP (FUTUR TWILIO) ===
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# === GOOGLE MAPS ===
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# === RÉSEAUX SOCIAUX ===
FACEBOOK_URL=https://facebook.com/yourpage
INSTAGRAM_URL=https://instagram.com/yourpage
TWITTER_URL=https://twitter.com/yourpage
YOUTUBE_URL=

# === PARAMÈTRES AVIS ===
AVIS_REQUIRE_MODERATION=False

# === PARAMÈTRES RÉSERVATIONS ===
RESERVATION_AUTO_CONFIRM=False
RESERVATION_DEPOSIT_PERCENTAGE=30

# === TAILWIND (si NPM n'est pas dans le PATH) ===
NPM_BIN_PATH=npm